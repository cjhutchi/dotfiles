# .bash_aliases

alias rm="rm -rfiv"
alias mv="mv -vi"
alias cp="cp -ivR"
alias mkdir="mkdir -pv"
alias df="df -h"
alias du="du -h"
alias l="ls -hG"
alias ls="ls -hG"
alias ll="ls -hGl"
alias la="ls -hGa"
alias grep="grep --color=auto"
alias jobs="jobs -l"
alias header="curl -I"
alias tree="tree -hC"
alias ip="curl ipecho.net/plain; echo"
alias server="python -m SimpleHTTPServer"
alias sqlite3="sqlite3 -echo -column -header"
alias rss="newsbeuter"
alias code="cd $HOME/Documents/Code"
