#!/bin/bash
# This script decrypts an inputted file using the
# password passed in.

if [ "$#" -ne 1 ]; then
  echo "Illegal number of parameters"
  echo "usage: decrypt <filename>"
else
  file=$1

  echo -n Password:
  read -s password
  echo

  openssl des3 -d -pass pass:$password -in $1 | less
fi
